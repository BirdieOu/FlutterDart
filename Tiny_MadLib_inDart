import "dart:io";

void main() {
  print("Enter a color:");
  String color = stdin.readLineSync();
 
  print("Enter a plural noun:");
  String pluralNoun = stdin.readLineSync();
 
  print("Enter an animal:");
  String animal = stdin.readLineSync();
 
  print("Roses are ${color}.");
  print("${pluralNoun} are white.");
  print("I love a ${animal}.");
}
